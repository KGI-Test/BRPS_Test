<Application x:Class="BRPS.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             StartupUri="Views\MainWindow.xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" d1p1:Ignorable="d" 
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006">
  <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator x:Key="Locator" d:IsDataSource="True" xmlns:vm="clr-namespace:BRPS.ViewModels" />
            <ImageBrush x:Key="imgStatusNone" ImageSource="Images\None.png"/>
            <ImageBrush x:Key="imgStatusSuccess" ImageSource="Images\Success.png"/>
            <ImageBrush x:Key="imgStatusError" ImageSource="Images\Error.png"/>

            <Style x:Key="buttonStyle" TargetType="Button">
                <Setter Property="Width" Value="80"/>
                <Setter Property="Height" Value="22"/>
                <Setter Property="Margin" Value="2,2"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
            <Style x:Key="toggleButtonStyle" TargetType="ToggleButton">
                <Setter Property="Width" Value="95"/>
                <Setter Property="Height" Value="22"/>
                <Setter Property="Margin" Value="2,2"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </ResourceDictionary>
       
    </Application.Resources>
</Application>