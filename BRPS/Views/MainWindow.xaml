<Window x:Class="BRPS.Views.MainWindow"  xmlns:local="clr-namespace:BRPS.Views.Controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:g_mvvm_cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Platform"
        Title="BO Data Repository" Height="451" Width="850" WindowState="Maximized"  x:Name="MainView"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main }">
    <Window.Icon>
        <ImageSource>/BRPS;component/Resources/Repository.ico</ImageSource>
    </Window.Icon>
    <Window.Background>
        <ImageBrush ImageSource="/BRPS;component/Images/background.jpg"  />
    </Window.Background>
    <Window.Resources>
        <DataTemplate x:Key="ScheduledJobItemTemplate" DataType="Binding"  >
            <local:ScheduledJobExpander Margin="2,2" HorizontalAlignment="Stretch"/>
        </DataTemplate>        
    </Window.Resources>
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <g_mvvm_cmd:EventToCommand Command="{Binding OnWindowLoadedCommand, Mode=OneWay}" CommandParameter="{Binding ElementName=MainView}"/>
        </i:EventTrigger> 
    </i:Interaction.Triggers>
    
    <Grid Margin="3,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition  Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="3">
            <Label Content="Business Date" Foreground="White" FontWeight="Bold"/>
            <DatePicker x:Name="dtBusinessDate"  Height="24" Text="Business Date" Width="120" HorizontalAlignment="Left" Margin="5,2,2,2" SelectedDate="{Binding BusinessDate}" />
        </StackPanel>
        
        <ListView x:Name="JobListView" Grid.Row="3" Grid.Column="0" MinWidth="500"  HorizontalAlignment="Stretch" ItemTemplate="{StaticResource ScheduledJobItemTemplate}" 
                    ItemsSource="{Binding Path=ScheduledJobCV}" BorderBrush="#FFA9D6D6" BorderThickness="1" IsSynchronizedWithCurrentItem="True" >
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Height="22" FontSize="12" FontWeight="Bold" Margin="2,4,2,2" Padding="2,2" VerticalAlignment="Center" >
                                <TextBlock.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop x:Name="GradientStartColor" Color="LightBlue" Offset="0"/>
                                        <GradientStop x:Name="GradientEndColor" Color="#FFA2C6F1" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBlock.Background>
                            </TextBlock>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>       

        <local:GradientHeader Grid.Row="1" Grid.Column="0" Content="Scheduled Jobs" StartColor="White" EndColor="Gray" Foreground="Black" Margin="2,0,0,2" Padding="2,0,0,0" Height="20" />
        <local:GradientHeader Grid.Row="1" Grid.Column="2" Content="Logs" StartColor="White" EndColor="Gray" Foreground="Black" Margin="2,0,0,2" Padding="2,0,0,0" Height="20"/>
        <GridSplitter Grid.Row="1" Grid.Column="1"  HorizontalAlignment="Left"  VerticalAlignment="Stretch" Width="5" Background="Gray" Grid.RowSpan="3"/>
        <DataGrid x:Name="lvLogs" Grid.Row="3" Grid.Column="1" AutoGenerateColumns="False" ItemsSource="{Binding Path=AppLogCV}"  IsSynchronizedWithCurrentItem="True"
                    CanUserAddRows="False" IsReadOnly="True" Grid.ColumnSpan="2" Margin="5,0,0,0" >
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="colStatus" Header="Status" Width="45" Binding="{Binding Path=Status}"/>
                <DataGridTextColumn x:Name="colTime" Header="Log Time"  Width="130" Binding="{Binding Path=Log_Time}"/>
                <DataGridTextColumn x:Name="colJobDescription" Header="Description"  Width="Auto" Binding="{Binding Path=Job_Desc}"/>
                <DataGridTextColumn x:Name="colMessage" Header="Meessage"  Width="*" Binding="{Binding Path=Message}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Stretch"  Grid.ColumnSpan="3">
            <!--<Button x:Name="btnSelectAll" Style="{StaticResource buttonStyle}" Command="{Binding SelectAllCommand}" 
                    CommandParameter="{Binding ElementName=btnSelectAll}" >Select All</Button>-->
            <Button x:Name="btnDelete" Style="{StaticResource buttonStyle}" Command="{Binding DeleteJobCommand}" Width="70" IsEnabled="False">Delete</Button>
            <Button x:Name="btnEdit" Style="{StaticResource buttonStyle}" Command="{Binding EditJobCommand}" Width="70" IsEnabled="False">Edit</Button>
            <Button x:Name="btnAdd" Style="{StaticResource buttonStyle}" Command="{Binding AddJobCommand}"  Width="70" IsEnabled="False">Add</Button>
            <ToggleButton x:Name="btnAutoRun" Style="{StaticResource toggleButtonStyle}"  Command="{Binding AutoRunCommand}" 
                          CommandParameter="{Binding ElementName=btnAutoRun}" IsChecked="False" IsEnabled="False">Auto Run (OFF)</ToggleButton>
            <Button x:Name="btnExecute" Style="{StaticResource buttonStyle}" Command="{Binding ExecuteCommand}" Width="70"
                     CommandParameter="{Binding SelectedDate, ElementName=dtBusinessDate}" Content="Execute" Margin="2,5" />
        </StackPanel>
        <Button x:Name="btnClose" Grid.Row="4" Grid.Column="2"  Width="60" Margin="0,5,5,5" HorizontalAlignment="Right" Click="btnClose_Click">Close</Button>
        <StatusBar Grid.Row="5" Grid.ColumnSpan="3"/>

    </Grid>


</Window>
